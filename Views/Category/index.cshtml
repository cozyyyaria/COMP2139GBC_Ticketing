@model IEnumerable<GBC_Ticketing.Web.Models.Category>

<h2>Categories</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New Category</a>
</p>

<table class="table table-striped">
    <thead>
    <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Events Count</th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var category in Model)
    {
        <tr>
            <td>@category.Name</td>
            <td>@category.Description</td>
            <td>@category.Events?.Count ?? 0</td>
            <td>
                <a asp-action="Edit" asp-route-id="@category.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@category.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@category.Id">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>